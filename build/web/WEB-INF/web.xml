        <servlet-name>admin_add_room</servlet-name>
        <servlet-class>Controller.admin_add_room</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>book</servlet-name>
        <servlet-class>Controller.book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_list_booking</servlet-name>
        <servlet-class>Controller.admin_list_booking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>Controller.deleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteRoom</servlet-name>
        <servlet-class>Controller.deleteRoom</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Load</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>room_single</servlet-name>
        <url-pattern>/room_single</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>room_book</servlet-name>
        <url-pattern>/room_book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadRoom</servlet-name>
        <url-pattern>/loadRoom</url-pattern>
    </servlet-mapping>
    <!-- Trang chào mừng mặc định -->
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
