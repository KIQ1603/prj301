    <servlet>
        <servlet-name>LoadRoom</servlet-name>
        <servlet-class>Controller.LoadRoom</servlet-class>
    </servlet>
    <!-- Ánh xạ các Servlet đến URL pattern -->
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Controller.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signin</servlet-name>
